{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2015",
    "target": "es2017",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "charset": "utf-8",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": [ "assets/*" ],
      "@actions/*": [ "actions/*"],
      "@components/*": [ "components/*" ],
      "@constants/*": [ "constants/*" ],
      "@features/*": [ "features/*" ],
      "@hocs/*": [ "hocs/*" ],
      "@models/*": [ "models/*" ],
      "@node/*": [ "../node_modules/*" ],
      "@reducers/*": [ "reducers/*" ],
      "@root/*": [ "./*" ],
      "@selectors/*": [ "selectors/*" ],
      "@stores/*": [ "stores/*" ],
      "@utils/*": [ "utils/*" ],
      "@wrappers/*": [ "wrappers/*" ]
    },
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "target"
  ]
}
